<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.jku.Controller">
    <children>
        <MenuBar layoutY="1.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Load Data From CSV-FileAction" />
                        <MenuItem mnemonicParsing="false" text="Save to CSV-Data" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Automation">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Enable Auto Rules" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label layoutX="212.0" layoutY="83.0" text="Raum updaten">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <Label layoutX="168.0" layoutY="208.0" text="Größe" />
        <TextField fx:id="roomSize" layoutX="209.0" layoutY="208.0" onAction="#getRoomSize" />
        <Button fx:id="bestätigenButton" layoutX="287.0" layoutY="256.0" mnemonicParsing="false" onAction="#updateRoom" text="Bestätigen" />
        <Button fx:id="backToRoomOverviewButton" layoutX="79.0" layoutY="347.0" mnemonicParsing="false" onAction="#switchToStartScene" text="Zurück zur Room Overview" />
        <TextField fx:id="roomId" layoutX="209.0" layoutY="177.0" onAction="#getRoomId" />
        <Label layoutX="152.0" layoutY="181.0" text="Room ID" />
        <TextField fx:id="measurementUnit" layoutX="209.0" layoutY="144.0" onAction="#getMeasurementUnit" />
        <Label layoutX="174.0" layoutY="149.0" text="Unit" />
        <Label fx:id="createdRoom" layoutX="428.0" layoutY="351.0" text="|" />
    </children>
</AnchorPane>
